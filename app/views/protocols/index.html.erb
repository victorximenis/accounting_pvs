<%= link_to raw("<i class='add square icon'></i> Adicionar"), new_protocol_path, class: 'ui primary button' %>
<table class="ui single line table">
  <thead>
    <tr>
      <th>Data</th>
      <th>Protocolo</th>
      <th>Colaborador</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @protocols.each do |protocol| %>
    <tr>
      <td><%= protocol.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
      <td><%= link_to protocol.title, protocol %></td>
      <td><%= protocol.user.name %></td>
      <td>
        <% if protocol.approved %>
        <div class="ui green horizontal label"><i class="checkmark icon"></i> Aprovado</div>
        <% else %>
        <div class="ui orange horizontal label"><i class="wait icon"></i> Em An√°lise</div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
