<div class="ui items">
  <div class="item">
    <div class="ui small image">
      <img src="/protocol-image.jpg">
    </div>
    <div class="middle aligned content">
      <div class="header">
        <%= @protocol.title %>
      </div>
      <div class="meta">
        <span>Colaborador: <%= @protocol.user.name %></span>
      </div>
      <div class="description">
        <p><%= @protocol.description %></p>
        <% if @protocol.approved %>
          <div class="ui green horizontal label"><i class="checkmark icon"></i> Aprovado por <%= @protocol.approval_info.user.name %></div>
        <% else %>
          <div class="ui orange horizontal label"><i class="wait icon"></i> Em An√°lise</div>
        <% end %>
      </div>
      <div class="extra">

        <%= link_to raw("<div class='hidden content'>Baixar</div>
        <div class='visible content'>
          <i class='download icon'></i>
        </div>"), @protocol.protocol_attachment.url, class: 'ui animated button blue', tabindex: '0', target: 'blank' %>

        <% if current_user.is_root && !@protocol.approved %>
        <%= link_to raw("<i class='checkmark icon'></i> Aprovar"), approve_protocol_path(@protocol), class: 'ui right floated button green' %>
        <!-- <a class="ui right floated button green">
          <i class="checkmark icon"></i> Aprovar
        </a> -->
        <% end %>
      </div>
    </div>
  </div>
</div>
